<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/final_master"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/final_secondary"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="Update Date Of Birth"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <DatePicker
        android:id="@+id/dialogupdatedobdatepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:calendarTextColor="@color/final_secondary"
        android:calendarViewShown="true"
        android:datePickerMode="calendar"
        android:headerBackground="@color/final_secondary"
        android:outlineAmbientShadowColor="@color/final_secondary"
        android:outlineSpotShadowColor="@color/final_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialogupdatedobokbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="@color/final_secondary"
            android:padding="2dp"
            android:text="Ok" />
    </LinearLayout>
</LinearLayout>