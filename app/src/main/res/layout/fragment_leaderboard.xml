<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/final_master"
    tools:context=".Fragments.leaderboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myleaguesheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/final_secondary"
        android:background="@drawable/cardbotcurved"
        android:elevation="2dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backbot"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintHorizontal_bias=".1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhaina"
            android:text="LEADERBOARD"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/crown1img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/crown1img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:elevation="2dp"
            android:src="@drawable/crowncurved"
            app:layout_constraintBottom_toTopOf="@+id/myleagues1sticon"
            app:layout_constraintEnd_toEndOf="@+id/myleagues1sticon"
            app:layout_constraintStart_toStartOf="@+id/myleagues1sticon"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myleagues1sticon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="84dp"
            android:background="@drawable/circleback"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues3rdicon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/myleagues2ndicon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues1sticon"
            app:layout_constraintStart_toStartOf="@+id/myleagues1sticon"
            app:layout_constraintTop_toBottomOf="@id/myleagues1sticon"
            app:layout_constraintVertical_bias="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winner1"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues1sticon"
            app:layout_constraintStart_toStartOf="@+id/myleagues1sticon"
            app:layout_constraintTop_toBottomOf="@id/myleagues1sticon"
            app:layout_constraintVertical_bias="0.07">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Won: "
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="41402 coins"
                android:textSize="10sp" />

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myleagues3rdicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circleback"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/myleagues2ndicon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".75" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues3rdicon"
            app:layout_constraintStart_toStartOf="@+id/myleagues3rdicon"
            app:layout_constraintTop_toBottomOf="@+id/myleagues3rdicon"
            app:layout_constraintVertical_bias="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winner3"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues3rdicon"
            app:layout_constraintStart_toStartOf="@+id/myleagues3rdicon"
            app:layout_constraintTop_toBottomOf="@+id/myleagues3rdicon"
            app:layout_constraintVertical_bias="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Won: "
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41402 coins"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/white"
            android:elevation="2dp"
            android:src="@drawable/crowncurvedwhite"
            app:layout_constraintBottom_toTopOf="@+id/myleagues2ndicon"
            app:layout_constraintEnd_toEndOf="@+id/myleagues2ndicon"
            app:layout_constraintStart_toStartOf="@+id/myleagues2ndicon"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myleagues2ndicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/circleback"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myleagues3rdicon"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".75" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues2ndicon"
            app:layout_constraintStart_toStartOf="@+id/myleagues2ndicon"
            app:layout_constraintTop_toBottomOf="@+id/myleagues2ndicon"
            app:layout_constraintVertical_bias="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Winner2"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/myleagues2ndicon"
            app:layout_constraintStart_toStartOf="@+id/myleagues2ndicon"
            app:layout_constraintTop_toBottomOf="@+id/myleagues2ndicon"
            app:layout_constraintVertical_bias="0.2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Won: "
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41402 coins"
                android:textSize="10sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/myleaguesbotgrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myleaguesheader"
        android:orientation="horizontal"
        android:weightSum="6">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="LUDO"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="FREE FIRE"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="CLASHSQUAD"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="QUIZ"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="FAN BATTLE"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@drawable/outlinedbot"
            android:text="BGMI"
            android:textColor="@color/final_secondary"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/myleaguesfooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myleaguesbotgrp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/myleaguesswitchgrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/myleaguesswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:text="All" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textColor="@color/white" />
        </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />

        <include layout="@layout/leaderboarditems" />


    </LinearLayout>
</ScrollView>
    </LinearLayout>
</RelativeLayout>
