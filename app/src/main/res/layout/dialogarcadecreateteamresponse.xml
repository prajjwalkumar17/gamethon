<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/final_master"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Team Details"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dialogitemcreateteammsgresponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="2dp"
            android:text="you will get Room_id and password 15 minutes before match and share below team_id with your team_mates"

            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialogitemcreateteamname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="2dp"
            android:text="Deamons Squad"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialogitemcreateteammteamcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="2dp"
            android:text="ioxRsV8FBtd"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>